<h1>Listing bills</h1>

<br>

<%= form_tag(bills_path, :method => "get") do %>
  <div class = "input-append">
    <%= text_field_tag :search %>
    <button class="btn" type="submit">Pesquisar</button>
  </div>
<% end %>

<% if params[:search] %>
   <table>
  <thead>
    <tr>
      <th>Numero documento</th>
      <th>Id upload</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.numero_documento %></td>
        <td><%= bill.id_upload %></td>
        <td><%= bill.notes %></td>
        
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% end %>




