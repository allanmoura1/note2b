<h1>New bill</h1>

<%= form_for(@bill,:html => {:multipart =>true}) do |f| %>
  <% if @bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul>
      <% @bill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :numero_documento%>
    <%= f.text_field :numero_documento %>
  </div>
  <div class="field">
    <%= f.label :id_upload%>
    <%= f.text_field :id_upload %>
  </div>
  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes, :value => flash[:ocr] %>
  </div>
  <div class = "field">
    <%= label_tag :doc %>
    <%= file_field_tag :doc %>
  </div>
  <div class="actions">
    <%= f.submit 'Fazer Upload' %>
  </div>
<% end %>


