<% if @user.errors.any? %>
	<div id="error_explanation">
		Há erros no formulário, por favor verifique.
	</div>
<% end %>
<%= form_for @user do |f| %>
	<p>
		<%= f.label :full_name, "Nome Completo" %>
		<%= f.text_field :full_name %>
		<%= error_tag @user, :full_name %>
	</p>
	<p>
		<%= f.label :email, "E-mail" %><br />
		<%= f.text_field :email %>
		<%= error_tag @user, :email %>
	</p>
	<p>
		<%= f.label :cpf %><br />
		<%= f.text_field :cpf %>
		<%= error_tag @user, :cpf %>
	</p>
	<p>
		<%= f.label :password, "Senha" %><br />
		<%= f.password_field :password %>
		<%= error_tag @user, :password %>
	</p>
	<p>
		<%= f.label :password_confirmation, "Confirme sua senha" %><br />
		<%= f.password_field :password_confirmation %>
		<%= error_tag @user, :password_confirmation %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>